# Uncomment this line to define a global platform for your project
# platform :ios, '8.0'

use_frameworks!

target 'Warmshowers' do
    
    # Networking
    pod 'Alamofire'
    pod 'SwiftyJSON'
    pod 'BrightFutures'
    
    # Image handling
    pod 'HanekeSwift'
    pod 'Toucan'
    
    # Logging
    pod 'XCGLogger'
    
    # Local DB (Core Data alternative)
    pod 'RealmSwift'
    
    # Connectivity
    pod 'IJReachability', :git => 'https://github.com/Isuru-Nanayakkara/IJReachability.git'

end

target 'WarmshowersTests' do
    # test naming and output
    pod 'Nimble'
    
    # see other target
    pod 'BrightFutures'
    pod 'RealmSwift'
end
